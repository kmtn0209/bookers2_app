<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5px-sm-0 mx-auto">
        <h2>User info</h2>

         <%= form_with model: @user do |f| %>
          <label for="inputName">Name</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
          <label for="inputImage">ProfileImage</label><br>
          <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*" %><br>
          <label for="inputIntroduction">Introduction</label><br>
          <%= f.text_field :introduction, id:"introduction", placeholder:"ユーザー説明"%><br>
          <%= f.submit "変更を保存" %>
         <% end %>

      </div>
    </div>
  </div>
</main>