<div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-md-3">
            <h2>User info</h2>


            <table class="table">
                <tbody>
                    <tr>
                        <th>name</th>
                        <th><%= @nickname %></th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th><%= @introduction %></th>
                    </tr>
                </tbody>
            </table>
<div class="row">
  <a class="btn btn-outline-secondary btn-block" href='/users/:id/edit'>
   <i class="fa-solid fa-user-gear"></i>
  </a>
</div>
<div class="row">
  <h2 class="mt-3">New book</h2>
    <%= form_with model: @book, url: '/books', method: :post do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <p>
        <%= f.submit 'Create Book' %>
      </p>
    <% end %>





